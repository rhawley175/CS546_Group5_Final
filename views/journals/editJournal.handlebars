<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="../../public/css/main.css">
</head>
<body>
  <h1>Edit Journal</h1>
  <form action="/journals/{{journal._id}}" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="{{journal.title}}" required>
    </div>
    <button type="submit">Update Journal</button>
  </form>
</body>
