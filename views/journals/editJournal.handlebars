<h1>Edit Journal</h1>

<form action="/journals/{{journal._id}}?_method=PUT" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{journal.title}}" required>
  </div>
  <div>
    <label for="sections">Sections:</label>
    <input type="text" id="sections" name="sections" value="{{journal.sections}}" required>
    <small>Enter section IDs separated by commas</small>
  </div>
  <button type="submit">Update Journal</button>
</form>
