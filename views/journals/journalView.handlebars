<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="../../public/css/main.css">
</head>

<body>
  <h2>{{journal.title}}</h2>
  <p>Author: {{journal.author}}</p>

  <div class="section-actions">
    <a href="/sections/newSection?journalId={{journal._id}}">Create a Section</a>
  </div>

  <h3>Sections:</h3>
  {{#if journal.sections.length}}
    <ul>
      {{#each journal.sections}}
        <li><a href="/sections/{{this._id}}">{{this.title}}</a></li>
      {{/each}}
    </ul>
  {{else}}
    <p>No sections yet. Create one!</p>
  {{/if}}

  <div class="journal-actions">
    <a href="/journal.html">Back to Main Journal Page</a>
    <br>
    <a href="/users/get/{{journal.author}}">Back to User Page</a>
    <br><br>
    <a href="/journals/{{journal._id}}/delete" class="delete-link">Delete This Journal</a>
  </div>
</body>
