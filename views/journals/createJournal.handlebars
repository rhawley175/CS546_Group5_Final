<h2>Create New Journal</h2>

<form action="/journals/create" method="POST">
  <div>
    <label for="title">Journal Title:</label>
    <input type="text" id="title" name="title" required>
  </div>

  <div>
    <label for="sectionTitle">Section Title:</label>
    <input type="text" id="sectionTitle" name="sectionTitle" required>
  </div>

  <div>
    <label for="sectionContent">Section Content:</label>
    <textarea id="sectionContent" name="sectionContent" required></textarea>
  </div>

  <button type="submit">Create Journal</button>
</form>
