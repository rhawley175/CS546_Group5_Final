<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="../../public/css/main.css">
</head>
<body>
    <h1>{{title}}</h1>
    {{#if message}}
        <p>{{message}}</p>
    {{else}}
        <form action="/sections/delete/{{sectionId}}" method="post">
            <p>Are you sure you want to delete this section?</p>
            <button type="submit">Delete Section</button>
        </form>
    {{/if}}
    {{#if error}}
        <p>Error: {{error}}</p>
    {{/if}}
    <script src="../../public/js/sections.js"></script>
</body>